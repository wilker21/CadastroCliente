@model CadastroCliente.Models.ListarViewModel
@using CadastroCliente.Controllers

@using (Html.BeginForm(nameof(HomeController.Index)))
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2">
                @Html.EditorFor(model => model.Filtro.Filtro, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <input type="submit" value="Filtrar" class="btn btn-default" />
        </div>
    </div>
}
